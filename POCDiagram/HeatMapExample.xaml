<UserControl x:Class="POCDiagram.HeatMapExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POCDiagram"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance local:HeatMapExample}">

    <Grid>
        <lvc:GeoMap HeatMap="{Binding Values}" Source="Maps/World.xml" LanguagePack="{Binding LanguagePack}" />
    </Grid>
</UserControl>
